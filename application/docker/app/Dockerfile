FROM rockylinux:8


ARG APPLICATION_NAME
ARG APPLICATION_SECRET

ARG SERVER_HOST
ARG SERVER_SCHEME
ARG SERVER_PORT

ARG TIMEZONE
ARG TIMEZONE_ENABLED

ARG STATIC_LOCATION
ARG STATIC_PREFIX

ARG MEDIA_LOCATION
ARG MEDIA_PREFIX

ARG DATABASE_NAME
ARG DATABASE_HOST
ARG DATABASE_PORT
ARG DATABASE_USER
ARG DATABASE_PASS
ARG DATABASE_CHARSET

ARG ENVIRONMENT
ARG DEBUG

ENV APPLICATION_NAME=${APPLICATION_NAME}
ENV APPLICATION_SECRET=${APPLICATION_SECRET}

ENV SERVER_HOST=${SERVER_HOST}
ENV SERVER_SCHEME=${SERVER_SCHEME}
ENV SERVER_PORT=${SERVER_PORT}

ENV TIMEZONE=${TIMEZONE}
ENV TIMEZONE_ENABLED=${TIMEZONE_ENABLED}

ENV STATIC_LOCATION=${STATIC_LOCATION}
ENV STATIC_PREFIX=${STATIC_PREFIX}

ENV MEDIA_LOCATION=${MEDIA_LOCATION}
ENV MEDIA_PREFIX=${MEDIA_PREFIX}

ENV DATABASE_NAME=${DATABASE_NAME}
ENV DATABASE_HOST=${DATABASE_HOST}
ENV DATABASE_PORT=${DATABASE_PORT}
ENV DATABASE_USER=${DATABASE_USER}
ENV DATABASE_PASS=${DATABASE_PASS}
ENV DATABASE_CHARSET=${DATABASE_CHARSET}

ENV ENVIRONMENT=${ENVIRONMENT}
ENV DEBUG=${DEBUG}

RUN dnf update -y

RUN dnf install -y  --nobest mc
RUN dnf install -y --nobest glibc-langpack-de.x86_64

RUN dnf install -y --nobest \
        mariadb-devel mariadb-connector-c \
        python38 python38-devel python38-pip python38-setuptools python38-libs \
        openssl-libs libffi libnotify gcc make wget curl fuse fuse-libs kmod

RUN mkdir --parents /srv

COPY ./requirements.txt /root/requirements.txt

RUN python3 -m pip install --user -r /root/requirements.txt

CMD ["python3", "./manage.py", "runserver", "0.0.0.0:9000"]